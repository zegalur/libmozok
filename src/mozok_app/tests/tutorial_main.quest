# ================================ Main Quest ================================ #

# Finish all the tutorials one by one.

version 1 0
project tutorial_main

main_quest FinishAllTutorials:
	preconditions:
		# none
	goal:
		TutorialFinished(controlsTutorial)
		TutorialFinished(fightingTutorial)
		TutorialFinished(keyTutorial)
		TutorialFinished(puzzleTutorial)
	actions:
		ControlsTutorial
		FightingTutorial
		KeyTutorial
		PuzzleTutorial
	objects:
		controlsTutorial
		fightingTutorial
		keyTutorial
		puzzleTutorial
	subquests:
		ControlsTutorial
		FightingTutorial
		KeyTutorial
		PuzzleTutorial


action InitTutorials:
	pre # none
	rem # none
	add PTut_Init()
